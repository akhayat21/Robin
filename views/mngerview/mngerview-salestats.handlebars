<script>
    var ran = false;
$(document).ready(function() {
    if(!ran){
        $.ajax("/api/Sales", {
            type: "GET",
            }).then(function(resp) {
                console.log(resp)
                ran = true;
                for(i=0; i<resp.length; i++){
                    var tr = "<tr>";
                    tr += '<th scope="row">' + resp[i].salesId + '</th>';
                    tr += '<td>' + resp[i].clientId + '</td>';
                    tr += '<td>' + resp[i].productId + '</td>';
                    tr += '<td>' + resp[i].transactionId + '</td>';
                    tr += "</tr>"
                    $("#productstable").append(tr)
                }
            });
    }
});
</script>